  <script>
    // Change this code to whatever you want printed in the box.
    const SECRET = "MERRYCHRISTMAS";

    function unlock() {
      const val = (document.getElementById("code").value || "").trim().toUpperCase();
      const status = document.getElementById("status");
      if (val === SECRET) {
        document.getElementById("content").classList.remove("hidden");
        status.innerHTML = '<span class="ok">Unlocked. Welcome to movie night.</span>';
        document.querySelector(".lockbox").style.display = "none";
      } else {
        status.innerHTML = '<span class="err">Not quite. Try again.</span>';
      }
    }

    function hint() {
      document.getElementById("status").textContent =
        "Hint: It is two words, all caps, no spaces. It is the classic holiday phrase.";
    }

    function confetti() {
      alert("Movie night begins. I love you.");
    }
  </script>
